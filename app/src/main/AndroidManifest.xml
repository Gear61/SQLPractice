<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".utils.MyApplication"
        android:fullBackupContent="true"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:name=".activities.AnswerCheckerActivity"
            android:label="@string/answer_checker_label"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".activities.QuestionActivity"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settings"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".activities.DatabaseTablesActivity"
            android:label="@string/database_tables_title"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".activities.WebActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        
        <activity
            android:name=".activities.SandboxActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/sandbox_mode"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".activities.SandboxResultActivity"
            android:label="@string/sandbox_results"
            android:configChanges="orientation|screenSize">
        </activity>
    </application>
</manifest>
